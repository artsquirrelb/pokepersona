script Eventscript_AkiMitsuFollower_Talk {
    if (var(VAR_TEMP_0) == 2){
        msgbox(format("{SPEAKER NAME_M}{CREATE MUGSHOT_M EMOTE_SERIOUS}Let's go, Sanada-kun. There's no time to waste.\p
        {SPEAKER NAME_A}{CREATE MUGSHOT_A EMOTE_SERIOUS}I know."))
    }
    elif(var(VAR_TEMP_0) == 1){
        msgbox(format("{SPEAKER NAME_M}{CREATE MUGSHOT_M EMOTE_NORMAL}I'm still getting used to travelling with a larger party like this.\p
        {SPEAKER NAME_M}{CREATE MUGSHOT_M EMOTE_SMILE}If I have to be honest, I find it quite delightful so far.\p
        {SPEAKER NAME_A}{CREATE MUGSHOT_A EMOTE_SMILE}Oh? Did you travel before?\p
        {SPEAKER NAME_M}{CREATE MUGSHOT_M EMOTE_SMILE}It was for the Ranger School. I used to do the fieldwork for the Pokémon Researchers there.\p
        {SPEAKER NAME_A}{CREATE MUGSHOT_A EMOTE_SMILE}That sounds awesome. Miki and I have always wanted to travel the region, for Pokémon research or not.\p
        {SPEAKER NAME_A}{CREATE MUGSHOT_A EMOTE_SAD}......\p
        {SPEAKER NAME_M}{CREATE MUGSHOT_M EMOTE_SAD}......\p
        {SPEAKER NAME_A}{CREATE MUGSHOT_A EMOTE_SAD}I just brought the mood down, didn't I? Sorry.\p
        {SPEAKER NAME_M}{CREATE MUGSHOT_M EMOTE_SERIOUS}We will find her soon.\p
        {SPEAKER NAME_A}{CREATE MUGSHOT_A EMOTE_SERIOUS}Of course, I believe so."))
        closemessage
        setvar(VAR_TEMP_0, 2)
    }
    else {
        msgbox(format("{SPEAKER NAME_A}{CREATE MUGSHOT_A EMOTE_CONFIDENT}Just want to say that you won't regret partnering with us.\p
        {SPEAKER NAME_M}{CREATE MUGSHOT_M EMOTE_SMILE}We'll see. I do rarely make wrong choices.\p
        {SPEAKER NAME_A}{CREATE MUGSHOT_A EMOTE_HAPPY}Ahaha, very confident, aren't you? Don't worry. I don't intend to make it a wrong choice."))
        closemessage
        setvar(VAR_TEMP_0, 1)
    }
}

script Eventscript_MitsuruFollower_SetPartner {
    msgbox(format("{SPEAKER NAME_M}{CREATE MUGSHOT_M EMOTE_SMILE}Very well. I'll back you up."))
    closemessage
    changefollowerbattler(PARTNER_MITSURU_C1)
    setflag(FLAG_PARTNER_WILD_BATTLES)
}

script Eventscript_MitsuruFollower_UnsetPartner {
    msgbox(format("{SPEAKER NAME_M}{CREATE MUGSHOT_M EMOTE_SMILE}You want to train on your own? Your determination is truly admirable."))
    closemessage
    changefollowerbattler(0)
    clearflag(FLAG_PARTNER_WILD_BATTLES)
}

script Eventscript_MitsuruFollower_Return {
    msgbox(format("{SPEAKER NAME_M}{CREATE MUGSHOT_M EMOTE_SMILE}By all means. I figure you miss your Pokémon as well."))
    closemessage
    call(Eventscript_NPCFollowerReturn)
}

script Eventscript_MitsuruFollower_Cancel {
    playse(SE_PIN)
    applymovement(OBJ_EVENT_ID_NPC_FOLLOWER, moves(emote_question_mark))
    waitmovement(0)
    msgbox(format("{SPEAKER NAME_M}{CREATE MUGSHOT_M EMOTE_NORMAL}Well, if you have anything you want to say to me, please don't hesitate."))
}



script Eventscript_NPCFollowerReturn {
    specialvar(VAR_RESULT, GetPlayerFacingDirection)
    if (var(VAR_RESULT) == DIR_NORTH){
        applymovement(OBJ_EVENT_ID_NPC_FOLLOWER, walkdown)
    }
    elif (var(VAR_RESULT) == DIR_EAST){
        applymovement(OBJ_EVENT_ID_NPC_FOLLOWER, walkleft)
    }
    elif (var(VAR_RESULT) == DIR_WEST){
        applymovement(OBJ_EVENT_ID_NPC_FOLLOWER, walkright)
    }
    else{
        applymovement(OBJ_EVENT_ID_NPC_FOLLOWER, walkup)
    }
    waitmovement(0)
    clearflag(FLAG_FOLLOWERS_DISABLED)
    clearflag(FLAG_PARTNER_WILD_BATTLES)
    destroyfollowernpc
}


