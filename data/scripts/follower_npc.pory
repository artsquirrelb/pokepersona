script Eventscript_MitsuruFollower{
    lock
    faceplayer
    checkfollowerbattler
    msgbox(format("{SPEAKER NAME_M}{CREATE MUGSHOT_M EMOTE_NORMAL}Is something wrong, Sanada-kun?"))
    if (var(VAR_RESULT) == FALSE){   
        multichoice(18, 4, MULTI_NPC_FOLLOWER_1, 0)
        call (Eventscript_MitsuruFollowerMultichoice1) //isn't battle partner
        closemessage
        release
        end
    }
    else{
        multichoice(18, 4, MULTI_NPC_FOLLOWER_2, 0)
        call (Eventscript_MitsuruFollowerMultichoice2) //already battle partner
        closemessage
        release
        end
    }
}

