script Route1_Eventscript_HiddenGrotto {
    lock
    msgbox(Eventscript_HiddenGrotto, MSGBOX_YESNO)
    closemessage
    if (var(VAR_RESULT) == TRUE){
        msgbox("No map yet")
    }
    release
    end
}

