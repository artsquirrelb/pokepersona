    format("There's a narrow path leading further to the woods. Do you want to proceed?")
}

script Route1_Eventscript_Twins {
    lock
    faceplayer
    msgbox(format("Shhh! We heard Pokémon's cry in that narrow path over there.\p
    Our mother said we shouldn't be interacting with wild Pokémon so we'll stay here."))
    closemessage
    release
    end
}