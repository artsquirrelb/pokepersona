script Route2_Gatehouse_Eventscript_Nurse {
    lock
    faceplayer
    setspeaker("Nurse Eimi")
    msgbox(format("Hello and welcome to Route 2's Gatehouse.\p
    Let me heal your tired Pokémon."))
    hidefollower
    playse(MUS_HEAL)
    waitse
    special(HealPlayerParty)
    updatefollowingmon
    msgbox(format("
    Thank you for waiting. We have restored your tired Pokémon to full health.\p
    We hope to see you again."))
    closemessage
    applymovement(LOCALID_PLAYER, facedown)
    waitmovement(0)
	release
	end
}

