mapscripts Windwardport_RangerBuidling_1F_MapScripts {}

script Windwardport_RangerBuilding_1F_Elevator{
    lock
    msgbox(format("Go to 2F?"), MSGBOX_YESNO)
    if (var(VAR_RESULT))
    {
        call(Eventscript_ElevatorSFX)
        warpsilent(MAP_WINDWARDPORT_RANGER_BUIDLING_2F, 3, 5)
        waitstate
    }
    else
    {
        applymoveplayer(facedown)
        release
        end
    }
}

script Eventscript_ElevatorSFX {
    fadescreenswapbuffers(FADE_TO_BLACK)
    playse(SE_ESCALATOR)
    waitse
    playse(SE_CLICK)
    waitse
    playse(SE_SLIDING_DOOR)
    waitse
}

