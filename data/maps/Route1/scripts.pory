script Route1_Eventscript_NotTheWayToMeadow {
    lock
    applymovement(LOCALID_PLAYER, walkup)
    waitmovement(0)
    msgbox(format("{SPEAKER NAME_A}{CREATE MUGSHOT_A EMOTE_NORMAL}(If I remember correctly, Sunshine Meadow is in the north of Route 2.)"))
    closemessage
    release
    end
}

script Route1_Eventscript_Touma {
    if(var(VAR_AKIHIKOS_INTRO_STATE) == 100){                           //post prologue
        trainerbattle_single(TRAINER_TOUMA, Route1_ToumaIntro_A, Route1_ToumaDefeated)
    }
    else{
        trainerbattle_single(TRAINER_TOUMA, Route1_ToumaIntro, Route1_ToumaDefeated)
    }
    setspeaker("Touma")
    faceplayer
    if (var(VAR_TEMP_0) == 1){
        msgbox(format("I'll definitely become a Pokémon researcher!"))
        closemessage
        end
    }
    else{
    msgbox(Route1_ToumaPostBattle)
    closemessage
    setspeaker("Touma")
    msgbox(format("{DESTROY_MUGSHOT}Ma-Marvelous? You think so? Thanks!!"))
    closemessage
    setvar(VAR_TEMP_0, 1)
    }
    release
    end
}

