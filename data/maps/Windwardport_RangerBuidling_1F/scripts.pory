script Windwardport_RangerBuilding_1F_Nurse {
    setspeaker("Nurse Floria")
    call(Eventscript_Ranger_Nurse_Greetings)
    setspeaker("Nurse Floria")
    call(Eventscript_Nurse_Goodbye)
	release
	end
}

script Eventscript_Ranger_Nurse_Greetings{
    lock
    faceplayer
    msgbox(format("Hello and welcome to the Pokémon Ranger Base.\p
    Let me heal your tired Pokémon."))
    hidefollower
    playse(MUS_HEAL)
    waitse
    special(HealPlayerParty)
    updatefollowingmon
}

script Windwardport_RangerBuilding_1F_Receptionist {
