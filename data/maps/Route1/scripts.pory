script Route1_Eventscript_NotTheWayToMeadow {
    lock
    applymovement(LOCALID_PLAYER, walkup)
    waitmovement(0)
    msgbox(format("{SPEAKER NAME_AKIHIKO}{CREATE_MUGSHOT MUGSHOT_AKIHIKO EMOTE_NORMAL}(If I remember correctly, Sunshine Meadow is in the north of Route 2.)"))
    closemessage
    release
}

script Route1_Eventscript_Touma {
    if(var(VAR_AKIHIKOS_INTRO_STATE) >= 44){
    trainerbattle_single(TRAINER_TOUMA_2, Route1_ToumaIntro, Route1_ToumaDefeated)
    }
    else{
        trainerbattle_single(TRAINER_TOUMA, Route1_ToumaIntro, Route1_ToumaDefeated)
    }
    setspeaker("Touma")
    faceplayer
    if (var(VAR_TEMP_0) == 1){
        msgbox(format("I'll definitely become a Pokémon researcher!"))
        closemessage
        end
    }
    else{
    msgbox(Route1_ToumaPostBattle)
    closemessage
    setspeaker("Touma")
    msgbox(format("{DESTROY_MUGSHOT}Ma-Marvelous? You think so? Thanks!!"))
    closemessage
    setvar(VAR_TEMP_0, 1)
    }
    end
}

text Route1_ToumaIntro {
    format("Um, you want a battle? Okay...")
}

text Route1_ToumaDefeated {
    format("Aw... I knew that you looked strong.")
}

text Route1_ToumaPostBattle {
    format("I don't do very well in my Pokémon battle classes.\p
    But it's okay because I want to become a researcher instead of a trainer.\p
    {SPEAKER NAME_MITSURU}{CREATE_MUGSHOT MUGSHOT_MITSURU EMOTE_SMILE}That is a marvelous personal goal. I wish you the best of luck.")
}

